<% if current_user %>
  <h1>
    <%= image_tag @user.avatar.url(:medium) %><br>
    <%= link_to "#{current_user.name}", @user %>
  </h1>
  <%= link_to "Logout", destroy_user_session_path, :method => :delete %><br>
<% else %>
  <%= link_to "Login", new_user_session_path %>
  <%= link_to "Register", new_user_registration_path %><br>
<% end %>
<br>
<div class="row masonry-row">
  <% @museums.shuffle.each do |museum| %>
    <div class="panel panel-default  museum-panel">
      <div class="panel-heading">
        <h3><%= link_to "#{museum.name}", museum %></h3>
      </div>
      <div class="panel-body">
        <%= museum.blurb %>
      </div>
    </div>
  <% end %>
</div>
<br>
<% if current_user %>
  <%=link_to "Add Museum", new_museum_path %>
<% end %>

         