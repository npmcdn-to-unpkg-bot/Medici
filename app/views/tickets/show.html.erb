<% if @ticket.quantity == 0 %>
  <p>
    You have redeemed your tickets!
  </p>
<% else %>
  <h3>Your Ticket:</h3>
  <h4><%= @ticket_code %></h4>
  <%= link_to "Redeem ticket", "redeem/#{@ticket.id}" %>
  <br>
  <%= Museum.find(@ticket.museum_id).name %>: <%= @ticket.quantity %>
<% end %>
